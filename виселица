print('Это игра - виселица')
print('Вы знаете правила?')
answer = str(input())
if answer == 'да':
    print('Тогда начинаем игру')
if answer =='нет' :
    print(' Игроку загадывается слово, которое он должен угадать, используя буквы алфавита и возможность совершить ограниченное количество ошибок.Всего оступно 7 ошибок.')
import random
words = ['собака', 'жираф', 'змея', 'барсук', 'кот', 'рысь', 'тигр', 'лев', 'медведь', 'лань', 'олень', 'лось', 'рыба', 'кит', 'акула','обезьяна']
x = random.choice(words)
print(x)
count = 0
for i in x :
    if  i.isalpha() :
        count += 1
        print(count)
print('Введите букву')
letter = str(input())
letter_word = x.split()
if letter == letter_word:
    print('буква стоит на')
    
